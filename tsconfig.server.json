{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "isolatedModules": false
  },
  "include": ["src/server/**/*", "src/types/**/*"],
  "exclude": ["node_modules", "dist", "src/components", "src/app"]
}